generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 1. User & Auth
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  kakaoId       String?   @unique
  phoneNumber   String?
  birthDate     String? // YYYY-MM-DD
  isRegistered  Boolean   @default(false)
  region        String? // [NEW] MVP 2

  accounts Account[]
  sessions Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  expenses       Expense[]
  recurringRules RecurringRule[]
  todos          Todo[]
  posts          Post[]
  comments       Comment[]
  products       Product[]
  likes          Like[]

  sentMessages Message[]  @relation("SentMessages")
  chatRooms    ChatRoom[]

  friends  Friend[] @relation("UserFriends")
  friendOf Friend[] @relation("FriendUsers")

  // [NEW] MVP 2
  organizedMeetups    Meetup[] @relation("OrganizedMeetups")
  participatedMeetups Meetup[] @relation("MeetupParticipants")
  
  // [NEW] MVP 3
  properties Property[]
}

model Friend {
  id       String @id @default(cuid())
  userId   String
  friendId String

  user   User @relation("UserFriends", fields: [userId], references: [id], onDelete: Cascade)
  friend User @relation("FriendUsers", fields: [friendId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, friendId])
}

model ChatRoom {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  lastMessageAt DateTime @default(now())

  // [NEW] MVP 2
  name     String?
  type     String  @default("DIRECT") // DIRECT, GROUP
  meetupId String? @unique
  meetup   Meetup? @relation(fields: [meetupId], references: [id])

  users    User[]
  messages Message[]
}

model Message {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())

  senderId String
  sender   User   @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)

  chatRoomId String
  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// 2. Expenses
model Expense {
  id       String   @id @default(cuid())
  amount   Float
  currency String // 'CAD' | 'KRW'
  category String
  date     DateTime
  note     String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model RecurringRule {
  id        String  @id @default(cuid())
  amount    Float
  currency  String // 'CAD' | 'KRW'
  category  String
  note      String?
  frequency String // 'monthly' | 'weekly'
  day       Int // 1-31 or 0-6

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 3. Calendar Todos
model Todo {
  id          String   @id @default(cuid())
  text        String
  isCompleted Boolean  @default(false)
  date        DateTime // YYYY-MM-DD stored as Date
  tagColor    String? // Hex code

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

// 4. Community Board
model Post {
  id       String @id @default(cuid())
  title    String
  content  String
  category String @default("일반")
  views    Int    @default(0)

  // [NEW] MVP 2
  region   String?
  meetupId String?
  meetup   Meetup? @relation(fields: [meetupId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  comments Comment[]
  likes    Like[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  images    Image[]
}

model Image {
  id        String   @id @default(cuid())
  url       String
  createdAt DateTime @default(now())

  postId    String?
  post      Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Comment {
  id      String @id @default(cuid())
  content String

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  userId     String?
  user       User?   @relation(fields: [userId], references: [id])
  authorName String? // For anonymous or quick display

  createdAt DateTime @default(now())
}

model Like {
  id String @id @default(cuid())

  postId String?
  post   Post?   @relation(fields: [postId], references: [id], onDelete: Cascade)

  productId String?
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  propertyId String?
  property   Property? @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@unique([userId, productId])
  @@unique([userId, propertyId])
}

// 5. Marketplace
model Product {
  id          String  @id @default(cuid())
  title       String
  price       Float
  description String
  category    String
  imageUrl    String?
  status      String  @default("SELLING") // SELLING, RESERVED, SOLD

  sellerId String
  seller   User   @relation(fields: [sellerId], references: [id], onDelete: Cascade)

  likes Like[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// [NEW] MVP 2 Meetup Model
model Meetup {
  id             String   @id @default(cuid())
  title          String
  description    String
  date           DateTime
  maxMembers     Int
  currentMembers Int      @default(1)
  status         String   @default("OPEN") // OPEN, CLOSED
  region         String
  image          String?  // [NEW] Thumbnail image URL (Trigger Rebuild)

  organizerId String
  organizer   User   @relation("OrganizedMeetups", fields: [organizerId], references: [id], onDelete: Cascade)

  participants User[] @relation("MeetupParticipants")

  chatRoom ChatRoom?
  posts    Post[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 6. Real Estate (MVP 3)
model Property {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  currency    String   @default("CAD") // CAD, KRW
  period      String   @default("MONTHLY") // MONTHLY, WEEKLY, DAILY, SALE
  type        String   @default("RENT") // RENT, SHARE, SALE, DORMITORY
  bedrooms    Int      @default(0)
  bathrooms   Float    @default(0.0)
  address     String
  latitude    Float
  longitude   Float
  region      String
  features    String?  // Comma separated e.g. "Wifi,Parking"
  status      String   @default("AVAILABLE") // AVAILABLE, RENTED, SOLD
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  images      PropertyImage[]
  likes       Like[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PropertyImage {
  id         String   @id @default(cuid())
  url        String
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}
